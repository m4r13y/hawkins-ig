rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to documents in the 'users' collection
    // only if the user is authenticated and the document ID matches their UID
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow user-specific data access in user-data collection
    match /user-data/{userId}/{dataType}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read-only access specifically to the 'bflic-cancer-quotes' collection
    match /bflic-cancer-quotes/{docId} {
      allow get, list: if true; // Allows reading documents and listing them
      allow write: if false;    // Explicitly denies writing
    }

    // You can add rules for other collections here.
    // If no other rules match, access will be denied by default.
        // Optional: Keep other collections locked down by default
    // unless you have specific rules for them
    match /{document=**} {
      allow read, write: if false;
    }
  }
}