rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Only the owner of the document can read or write it.
      allow read, write: if isOwner(userId);

      // Rules for subcollections within a user's document
      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Rules for the 'user-data' collection
    match /user-data/{userId} {
      // Only the owner of the document can read or write it.
      allow read, write: if isOwner(userId);

      // Rules for subcollections within a user-data document
      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Rules for the 'bflic-cancer-quotes' collection (public read)
    match /bflic-cancer-quotes/{docId} {
      allow read: if true;
      allow write: if false; // Nobody can write to this from the client

        // Subcollections can be read but not written
        match /{allPaths=**} {
            allow read: if true;
            allow write: if false;
        }
    }
  }
}
